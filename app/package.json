{
  "name": "money_plus_api",
  "version": "1.0.0",
  "author": "Rafael Felix",
  "license": "MIT",
  "description": "Money plus is a financial api for managing user expenses in general (bills, expenses, wage, reward)",
  "main": "index.js",
  "private": "true",
  "scripts": {
    "debug": "ts-node-dev --inspect=0.0.0.0 --respawn --transpile-only src/index.ts",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node build/src/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --check \"**/*.+(js|ts|json|md)\"",
    "format:fix": "prettier --write \"**/*.+(js|ts|json|md)\"",
    "clean": "rm -rf build/*",
    "build": "tsc"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.15.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "reflect-metadata": "^0.1.14",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
